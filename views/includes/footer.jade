script.
  $('#loginForm').submit(function(e) {
    e.preventDefault();
    var
      loginUsername = $('#loginUsername');
      loginPassword = $("#loginPassword");
      loginUsernameFeedback = $('#loginUsernameFeedback');
      loginPasswordFeedback = $('#loginPasswordFeedback');
      
    loginPasswordFeedback.html('<img src="images/spinner.gif" height="18" width="20">');
    $.ajax({
      type: "POST",
      url: '/ajaxLogin',
      data: {username: loginUsername.val(), password: loginPassword.val()},
      success: function(data){
      //alert(data);
        if (data=="[object Object]") {
          loginPasswordFeedback.html('<icon class="icon-remove red"></icon> <span>Please Try Again</span>');
        }
        else {
          loginUsernameFeedback.html('<icon class="icon-ok green"></icon>');
          loginPasswordFeedback.html('<icon class="icon-ok green"></icon>');
          window.location.replace("/loginSuccess");
        }
      }
    });
  });

