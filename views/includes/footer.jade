// Toggle Nav Menu
script.
  $(document).ready(function(){
  
    $("#hideNav").click(function(){
      $("#navContent").hide(200);
      var audio = $("#gong")[0];
      audio.pause();
      audio.currentTime = 0;
    });
    
    $("#navMenu").click(function(){
      $("#navContent").show(200);
      var audio = $("#gong")[0];
      audio.play();
    });
    
  });
    
// Start carousel cycle, set carousel height, .hello height, center .bigSearch
script.
  $(document).ready(function(){
    $("#foodPorn").carousel('cycle');
    var carouselHeight = 0.75 * window.innerHeight;
    var helloHeight = 0.21 * window.innerHeight;
    $(".item").attr({        
      style: "height: " + carouselHeight + "px"
    });
    
    $(".hello").attr({
      style: "height: " + helloHeight + "px"
    });
    
    var rowHeight = $(".bigSearch").parent().parent().height();
    $(".bigSearch").attr({
      style: "margin-top: " + (0.5 * rowHeight - 20) + "px"
    }); 
    
  });
  
