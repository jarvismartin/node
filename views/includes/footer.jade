//*** Check for unique EMAIL ***
script.
  var emailInput = $(".email"); // $(this)
      
  emailInput.on('input', function(){
    var emailFeedback = $('.emailFeedback');
    
    emailFeedback.html('<img src="images/spinner.gif" height="18" width="20">');
    
    var emailVal = $(this).val();

    if (emailVal.indexOf("@") >= 0 && emailVal.indexOf(".") >= 0) {
      $.ajax({
        type:"post",
        url:"/checkEmail",
        data:{email: emailVal},
        success:function(data){
          //console.log(data);
          if(data.unique){
            emailFeedback.html("<icon class='icon-ok' style='color: green'></icon>");
            emailInput.removeClass('notOkay');
          }
          else{
            emailFeedback.html("<icon class='icon-remove' style='color: red'></icon> <span>Email already registered</span>");
            emailInput.addClass('notOkay');
          }
        }
      });
    }
    else {
      emailFeedback.html("<icon class='icon-remove' style='color: red'></icon> <span>Invalid Email</span>");
      emailInput.addClass('notOkay');
    }
  });


