script.
  function showSubmit(){
    var 
      message = $('#message');
      submit = $("#submit");
  
    if (message.val() != "") {
      submit.removeClass('disabled');
    }
    else {
      submit.addClass('disabled');
    }
    
    //console.log('message = ' + message.val());
  }
  
